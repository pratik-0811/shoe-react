# Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# API Configuration
# For development: http://localhost:5000/api
# For production: https://api.solewaale.com/api (auto-detected based on domain)
VITE_APP_API_URL=http://localhost:5000/api
VITE_APP_ENVIRONMENT=development

# Production domains:
# Frontend: https://www.solewaale.com/
# API: https://api.solewaale.com/

# Application Configuration
REACT_APP_APP_NAME=Shoe Store
REACT_APP_VERSION=1.0.0

# Analytics and Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Payment Configuration (if implementing payment)
REACT_APP_STRIPE_PUBLISHABLE_KEY=
REACT_APP_PAYPAL_CLIENT_ID=

# Social Media Links
REACT_APP_FACEBOOK_URL=
REACT_APP_TWITTER_URL=
REACT_APP_INSTAGRAM_URL=

# Feature Flags
REACT_APP_ENABLE_WISHLIST=true
REACT_APP_ENABLE_REVIEWS=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info