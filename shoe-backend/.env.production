# Production Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://www.solewaale.com
CORS_ORIGIN=https://www.solewaale.com,http://www.solewaale.com,https://solewaale.com,http://solewaale.com

# Database Configuration
MONGODB_URI=mongodb+srv://prod_username:prod_password@prod-cluster.mongodb.net/shoe-store-prod?retryWrites=true&w=majority
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# JWT Configuration
JWT_SECRET=prod_jwt_secret_change_this_to_64_char_random_string_for_production_security
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=10

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_live_your_live_key_here
RAZORPAY_KEY_SECRET=your_razorpay_live_secret_key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@your-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Session Configuration
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Monitoring and Health Check
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
CORS_CREDENTIALS=true

# Cache Configuration
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30