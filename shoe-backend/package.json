{
  "name": "shoe-backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prod": "NODE_ENV=production node server.js",
    "build": "echo \"No build step required for Node.js\"",
    "docker:build": "docker build -t shoe-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env shoe-backend",
    "docker:compose:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:compose:down": "docker-compose -f docker-compose.prod.yml down",
    "deploy": "bash deploy.sh production deploy",
    "backup": "bash deploy.sh production backup",
    "health": "curl -f http://localhost:5000/health",
    "logs": "bash deploy.sh production logs"
  },
